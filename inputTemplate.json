{
    "services": [
        {
            "service1": {
                "author": "Gaurav Kumar <mail2gauravkumar@gmail.com>",
                "version": "1.0.0",
                "description": "A Sample micro-service to demonstrate usage of @apifie/node-microservice npm module",
                "models": {
                    "user": {
                        "firstname": {
                            "datatype": "string",
                            "required": true
                        },
                        "lastname": {
                            "datatype": "string",
                            "notNull": true
                        }
                    },
                    "location": {
                        "latitude": {
                            "datatype": "string",
                            "required": true
                        },
                        "longitude": {
                            "datatype": "string",
                            "notNull": false
                        }
                    }
                }
            }
        },
        {
            "service2": {
                "author": "Paridhi Mohindra <paridhi815@gmail.com>",
                "version": "1.0.0",
                "description": "A Sample micro-service to demonstrate usage of @apifie/node-microservice npm module",
                "models": {
                    "greeting": {
                        "hello": {
                            "datatype": "integer",
                            "required": true
                        },
                        "hi": {
                            "datatype": "boolean",
                            "notNull": true
                        }
                    }
                }
            }
        }
    ]
}